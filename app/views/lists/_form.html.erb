<div>
  <%= f.label :name, 'Name', class: 'block text-sm font-medium text-gray-700' %>
  <div class="mt-1">
    <%= f.text_field :name, class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
  </div>
</div>

<div>
  <%= f.label :subject, 'Description', class: 'block text-sm font-medium text-gray-700' %>
  <div class="mt-1">
    <%= f.text_field :description, class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
  </div>
</div>

<div>
  <%= f.label :kind, 'Type', class: 'block text-sm font-medium text-gray-700' %>
  <%= f.select :kind, List::KINDS.to_a.map(&:reverse), {}, class: 'mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md' %>
</div>
