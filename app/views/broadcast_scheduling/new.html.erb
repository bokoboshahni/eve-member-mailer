<%= form_with url: broadcast_schedule_path(@broadcast) do |f| %>
  <div class="bg-white overflow-hidden shadow rounded-lg divide-y divide-gray-200">
    <div class="px-4 py-5 sm:px-6">
      <h1 class="text-2xl font-bold text-gray-900">Schedule Broadcast (<%= @broadcast.name %>)</h1>
    </div>
    <div class="space-y-6 px-4 py-5 sm:p-6">
      <div>
        <%= f.label :scheduled_at, 'Scheduled time', class: 'block text-sm font-medium text-gray-700' %>
        <div class="mt-1">
          <%= datetime_select :broadcast, :scheduled_at, {}, class: 'appearance-none inline-block w-20 px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %> <span>EVE/UTC Time</span>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-4 py-4 sm:px-6">
      <div class="text-right">
        <%= f.submit 'Schedule', class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
      </div>
    </div>
  </div>
<% end %>
