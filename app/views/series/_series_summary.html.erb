<div class="overflow-hidden bg-white divide-y divide-gray-200 rounded-lg shadow">
  <div class="px-4 py-5 bg-white border-b border-gray-200 sm:px-6">
    <div class="flex flex-wrap items-center justify-between -mt-2 -ml-4 sm:flex-nowrap">
      <div class="mt-2 ml-4">
        <h3 class="text-lg font-medium leading-6 text-gray-900">
          <%= @campaign.name %>
        </h3>
      </div>
      <div class="flex-shrink-0 mt-2 ml-4">
        <%= link_to 'Edit', edit_campaign_path(@campaign), class: 'relative inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500' %>
        <%= form_with url: campaign_path, class: 'inline-block', html: { method: :delete } do |f| %>
          <%= f.submit 'Delete', class: 'relative inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="px-4 py-5 border-t border-gray-200 sm:p-0">
    <dl class="sm:divide-y sm:divide-gray-200">
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-6 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
          Type
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-5">
          <p>
            <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
              <%= Campaign::KINDS[@campaign.kind.to_sym] %>
            </span>
          </p>
        </dd>
      </div>
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-6 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
          Description
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-5">
          <p><%= @campaign.description %></code></p>
        </dd>
      </div>
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-6 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
          Status
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-5">
          <p>
            <% if @campaign.status == 'inactive' %>
              <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                Inactive
              </span>
            <% elsif @campaign.status == 'active' %>
              <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-red-100 text-red-800">
                Active
              </span>
            <% end %>
          </p>
        </dd>
      </div>
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-6 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
          Delivery Window
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-5">
          <p><%= @campaign.delivery_hour.to_s.rjust(2, '0') %>:<%= @campaign.delivery_minute.to_s.rjust(2, '0') %> EVE/UTC</p>
        </dd>
      </div>
    </dl>
  </div>
</div>
