<div class="sm:col-span-3">
  <%= f.label :name, 'Name', class: 'block text-sm font-medium text-gray-700' %>
  <div class="mt-1">
    <%= f.text_field :name, class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
  </div>
</div>

<div class="sm:col-span-3">
  <%= f.label :sender_id, 'Sender', class: 'block text-sm font-medium text-gray-700' %>
  <div class="mt-1">
    <%= f.collection_select :sender_id, current_corporation.users.order(:eve_character_name), :id, :eve_character_name, { selected: current_user.id }, class: 'mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md' %>
  </div>
</div>

<div class="sm:col-span-3">
  <%= f.label :audience, 'Audience', class: 'block text-sm font-medium text-gray-700' %>
  <%= f.select :audience, Broadcast::AUDIENCES.to_a.map(&:reverse), {}, class: 'mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md', 'x-on:change' => 'audience = $el.value' %>
</div>

<div class="sm:col-span-3" x-show="audience == 'list'">
  <%= f.label :list_id, 'List', class: 'block text-sm font-medium text-gray-700' %>
  <%= f.collection_select :list_id, current_corporation.lists.kept.order(:name), :id, :name, {}, class: 'mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md' %>
</div>
