<%= render partial: 'shared/form_validations', locals: { model: @broadcast } %>

<%= form_with model: @broadcast, html: { 'x-data' => "{ audience: '#{@broadcast.audience || 'everyone'}' }"} do |f| %>
  <%= f.hidden_field :broadcast_id, value: @source_broadcast.id if @source_broadcast %>
  <div class="overflow-hidden bg-white divide-y divide-gray-200 rounded-lg shadow">
    <div class="px-4 py-5 sm:px-6">
      <h1 class="text-2xl font-bold text-gray-900">New Broadcast</h1>
    </div>
    <div class="px-4 py-5 space-y-6 sm:p-6">
      <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <%= render partial: 'broadcasts/form', locals: { f: f } %>
      </div>
    </div>
    <div class="px-4 py-4 bg-gray-50 sm:px-6">
      <div class="text-right">
        <%= f.submit 'Save', class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
      </div>
    </div>
  </div>
<% end %>
