<%= render partial: 'shared/form_validations', locals: { model: @step } %>

<div class="bg-white overflow-hidden shadow rounded-lg divide-y divide-gray-200">
  <div class="px-4 py-5 sm:px-6">
    <h1 class="text-2xl font-bold text-gray-900">Add Campaign Step</h1>
  </div>
  <div class="space-y-6 px-4 py-5 sm:p-6 ">
    <div class="grid grid-cols-1 divide-x gap-y-6 gap-x-4 sm:grid-cols-6">
      <div class="sm:col-span-3 space-y-6">
        <h2 class="text-center font-bold text-gray-900 text-lg">EVEmail</h2>
        <%= form_with model: @step, url: campaign_steps_path(@campaign), html: { class: 'space-y-6 space-x-6' } do |f| %>
          <%= f.hidden_field :kind, value: 'evemail' %>

          <div class="grid grid-cols-5">
            <div class="col-span-3 col-start-2">
              <%= f.label :template_id, 'Template', class: 'block text-sm font-medium text-gray-700' %>
              <%= f.collection_select :template_id, current_corporation.templates.kept.order(:name), :id, :name, {}, class: 'block w-full py-2 pl-3 pr-10 text-base border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
            </div>
          </div>

          <div class="grid grid-cols-5">
            <div class="col-span-3 col-start-2">
              <%= f.label :user_id, 'Sender', class: 'block text-sm font-medium text-gray-700' %>
              <%= f.collection_select :user_id, current_corporation.users.order(:eve_character_name), :id, :eve_character_name, {}, class: 'block w-full py-2 pl-3 pr-10 text-base border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
            </div>
          </div>

          <div class="text-center"><%= f.submit 'Create EVEmail Step', class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %></div>
        <% end %>
      </div>
      <div class="sm:col-span-3 space-y-6">
        <h2 class="text-center font-bold text-gray-900 text-lg">Delay</h2>
        <%= form_with model: @step, url: campaign_steps_path(@campaign), html: { class: 'space-y-6 space-x-6' } do |f| %>
          <%= f.hidden_field :kind, value: 'delay' %>

          <div class="grid grid-cols-3">
            <div class="col-span-1 col-start-2">
              <%= f.label :delay_days, 'Delay', class: 'block text-sm font-medium text-gray-700' %>
              <%= f.text_field :delay_days, class: 'shadow-sm focus:ring-indigo-500 focus:border-indigo-500 inline-block sm:text-sm border-gray-300 rounded-md', placeholder: 'Days' %>
            </div>
          </div>

          <div class="text-center"><%= f.submit 'Create Delay Step', class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
