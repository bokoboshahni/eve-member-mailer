<div class="divide-y divide-gray-200 lg:col-span-9">
  <div class="py-6 px-4 sm:p-6 lg:pb-8">
    <div class="flex items-center justify-between flex-wrap sm:flex-nowrap">
      <div>
        <h2 class="text-lg leading-6 font-medium text-gray-900">
          Characters
        </h2>
      </div>
      <div class="flex-shrink-0">
        <%= form_with url: character_settings_path do |f| %>
          <%= f.submit 'Authorize character', class: 'relative inline-flex items-center px-4 py-2 border border-transparent shadow-sm cursor-pointer text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
        <% end %>
      </div>
    </div>
    <div class="flex flex-col mt-6">
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Name
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Status
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Last Sync
                  </th>
                  <th scope="col" class="relative px-6 py-3">
                    <span class="sr-only">Edit</span>
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @user_characters.each do |uc| %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <div class="flex-shrink-0 h-10 w-10">
                          <%= image_tag eve_character_image_url(uc.character_id, 256), class: 'h-10 w-10 rounded-full' %>
                        </div>
                        <div class="ml-4">
                          <div class="text-sm font-medium text-gray-900">
                            <%= uc.character_name %>
                          </div>
                          <div class="text-sm text-gray-500">
                            <%= uc.corporation_name %>
                          </div>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% if uc.main? %><span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Main</span><% end %>
                      <% if uc.character_authorized? %><span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">Authorized</span><% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= local_time uc.updated_at %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <%= form_with url: character_setting_path(uc.character_id), html: { method: :delete } do |f| %>
                        <%= f.button class: 'relative inline-flex items-center px-2 py-2 text-sm font-medium text-red-500 bg-red border border-red-300 rounded-md hover:bg-red-50 focus:z-10 focus:outline-none focus:ring-1 focus:ring-red-500 focus:border-red-500' do %>
                          <span class="sr-only">Delete</span>
                          <%= render partial: 'icons/solid/x-circle', locals: { w: 5, h: 5, color: 'gray' } %>
                        <% end %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
