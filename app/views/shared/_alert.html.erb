<div class="rounded-md bg-<%= color %>-50 p-4 mb-6">
  <div class="flex">
    <div class="ml-3">
      <div class="mt-2 text-sm text-<%= color %>-700">
        <p>
          <%= text %>
        </p>
        <% if flash[:list]&.any? %>
          <ul class="mt-2 list-inside list-disc">
            <% flash[:list].each do |item| %>
              <li ><%= item %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
