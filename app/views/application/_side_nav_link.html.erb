<% if current %>
  <%= link_to url, class: 'bg-gray-900 text-white group flex items-center px-2 py-2 text-sm font-medium rounded-md' do %>
    <%= render "icons/outline/#{icon}" %>
    <%= text %>
  <% end %>
<% else %>
  <%= link_to url, class: 'text-gray-300 hover:bg-gray-700 hover:text-white group flex items-center px-2 py-2 text-sm font-medium rounded-md' do %>
    <%= render "icons/outline/#{icon}" %>
    <%= text %>
  <% end %>
<% end %>
